{
  "extends": "../tsconfig.json",
  "angularCompilerOptions": {
    "enableIvy": false,
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "@nebular/*": [
        "../node_modules/@nebular/*"
      ]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "../src/*.ts",
    "../src/**/*.d.ts",
    "../node_modules/@nebular/**/*.ts"
  ]
}
